<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Collect form data
    $firstName = htmlspecialchars(trim($_POST['first-name']));
    $lastName = htmlspecialchars(trim($_POST['last-name']));
    $email = htmlspecialchars(trim($_POST['email']));
    $mobile = htmlspecialchars(trim($_POST['mobile']));
    $comments = htmlspecialchars(trim($_POST['comments']));

    // Recipient email address
    $to = "fredkawayidah@gmail.com";
    
    // Subject
    $subject = "From Nation Infinity Africa Website";
    
    // Email message body
    $message = "
    First Name: $firstName\n
    Last Name: $lastName\n
    Email: $email\n
    Mobile Number: $mobile\n
    Comments: $comments\n
    ";

    // Headers
    $headers = "From: $email";

    // Send email
    if (mail($to, $subject, $message, $headers)) {
        // Success message
        echo "<script>alert('Thank you for contacting us. Your message has been sent successfully.'); window.location.href='index.html';</script>";
    } else {
        // Error message
        echo "<script>alert('Sorry, there was an error sending your message. Please try again later.'); window.location.href='index.html';</script>";
    }
} else {
    // Redirect to contact page if accessed directly
    header("Location: index.html");
    exit();
}
?>
